<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <PackageId>theodj97.CustomMediatR</PackageId>
    <Version>2.0.0</Version>
    <Authors>Theo Delvas Játiva</Authors>
    <Description>A simple implementation simulating original MediatR functionality.</Description>
    <PackageTags>mediator mediatr cqrs design-patterns pipeline messaging</PackageTags>
    <RepositoryUrl>https://github.com/theodj97/CustomMediatR</RepositoryUrl>

    <PackageLicenseExpression>MIT</PackageLicenseExpression>
    <PackageReadmeFile>README.md</PackageReadmeFile>

    <TargetFramework>net9.0</TargetFramework>
    <ImplicitUsings>enable</ImplicitUsings>
    <Nullable>enable</Nullable>
    <GenerateAssemblyInfo>false</GenerateAssemblyInfo>
  </PropertyGroup>
  <ItemGroup>
    <PackageReference Include="Microsoft.Extensions.DependencyInjection" Version="9.0.5" />
  </ItemGroup>

  <ItemGroup>
    <None Include="../../README.md" Pack="true" PackagePath="\" />
  </ItemGroup>

</Project>